			// Update TradingView widget themes based on system preference
			function updateWidgetThemes() {
				const isDarkMode = window.matchMedia('(prefers-color-scheme: dark)').matches;
				const theme = isDarkMode ? 'dark' : 'light';
				
				// Update iframe sources to use correct theme
				const iframes = document.querySelectorAll('.widget-container iframe');
				iframes.forEach((iframe) => {
					const iframeElement = iframe as HTMLIFrameElement;
					let src = iframeElement.src;
					if (src.includes('colorTheme=')) {
						src = src.replace(/colorTheme=[^&]*/, `colorTheme=${theme}`);
					} else if (src.includes('theme=')) {
						src = src.replace(/theme=[^&]*/, `theme=${theme}`);
					}
					iframeElement.src = src;
				});
			}
			
			// Update themes on page load
			document.addEventListener('DOMContentLoaded', updateWidgetThemes);
			
			// Update themes when system preference changes
