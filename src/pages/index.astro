				}
				
				.feature-icon {
					background: #3a3a3a;
					border-color: #555;
					color: #ccc;
				}
				
				.feature-card h3 {
					color: #e0e0e0;
				}
				
				.feature-card p {
					color: #ccc;
				}
				
				.about-preview {
					background: #2d2d2d;
				}
				
				.about-text h2 {
					color: #e0e0e0;
				}
				
				.about-text p {
					color: #ccc;
				}
				
				.about-image {
					background: #3a3a3a;
					border-color: #555;
					color: #ccc;
				}
				
				.btn-primary {
					background: #4a4a4a;
					color: #e0e0e0;
				}
				
				.btn-primary:hover {
					background: #5a5a5a;
				}
				
				.btn-secondary {
					background: transparent;
					color: #e0e0e0;
					border-color: #e0e0e0;
				}
				
				.btn-secondary:hover {
					background: #e0e0e0;
					color: #1a1a1a;
				}
				
				.contact {
					background: #1a1a1a;
				}
				
				.contact h2 {
					color: #e0e0e0;
				}
				
				.contact p {
					color: #ccc;
				}
				
				.contact-item h3 {
					color: #e0e0e0;
				}
				
				.contact-item p {
					color: #ccc;
				}
				
				footer {
					background: #0d0d0d;
					color: #ccc;
				}
			}
			
			/* Responsive */
			@media (max-width: 768px) {
				.hero h1 {
					font-size: 2.5rem;
				}
				
				.hero p {
					font-size: 1.1rem;
				}
				
				.about-content {
					grid-template-columns: 1fr;
					gap: 2rem;
				}
				
				nav ul {
					flex-direction: column;
					gap: 1rem;
				}
				
				.header-content {
					flex-direction: column;
					gap: 1rem;
				}
			}
		</style>
	</head>
